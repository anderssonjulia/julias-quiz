    "version": "0.2.0",
    "configurations": [
        {
            "name": "Pytest",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "-vvs",
                "--cov=${workspaceFolder}/quiz",
                "--cov-report",
                "html",
                "--cov-report",
                "term",
                "${workspaceFolder}/test/test_input_manager.py",
                "${workspaceFolder}/test/test_question_board.py",
                "${workspaceFolder}/test/test_question.py",
                "${workspaceFolder}/test/test_user.py"
        ]
        },
        {
            "name": "Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        }
    ]
}